<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-5 mb-3">
            <!-- Her bir öğe için 6 kolonluk genişlik -->
            <div class="team-card team-card-1-1">
                <div class="team-img-wrap">
                    <div class="team-img">
                        <img src="~/images/avatar5.png" alt="Team" width="100" height="100">
                    </div>
                </div>
                <div class="team-hover-wrap">
                    <div class="team-social">
                        <a href="#" class="icon-btn">
                            <i class="far fa-plus"></i>
                        </a>
                        <div class="th-social">
                            <a target="_blank" href="https://vimeo.com/"><i class="fab fa-vimeo-v"></i></a>
                            <a target="_blank" href="https://linkedin.com/"><i class="fab fa-linkedin-in"></i></a>
                            <a target="_blank" href="https://twitter.com/"><i class="fab fa-twitter"></i></a>
                            <a target="_blank" href="https://facebook.com/"><i class="fab fa-facebook-f"></i></a>
                        </div>
                    </div>
                    <div class="team-content">
                        <h3 class="team-title"><a href="#">@item.FirstName @item.LastName</a></h3>
                        <span class="team-desig">@item.RoleName</span>
                    </div>
                    <div class="team-info">
                        <span><i class="fal fa-file-check"></i>3 Courses</span>
                        <span><i class="fa-light fa-users"></i>Students 50+</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
